
<h2 class="community-title">Welcome to the Community</h2>

<div class="community-new_post-section">

<% if user_signed_in? %>

	<%= form_for @post do |f| %>

		<div class="new_post-inputs">
		<%= f.label :title, class: 'community-title_label' %>
		<%= f.text_field :title, class: 'community-title_input' %>
		<br/>
		<%= f.label :comment, class: 'community-comment_label'%>
		<%= f.text_area :comment, size: "24x6", class: 'community-comment_input' %>
		</div>
		<br/>
		<%= f.submit "Post", class: 'community-new_post-btn' %>

	<% end %>

<% else %>

	<h2>To comment sign in <a href="#">here</a>.</h2>
	<p>If you have no yet signed up, I invite you to do it! <a href="#">Sign up</a></p>

<% end %>

</div>

<table class="community-table_posts">

  <tbody class="community-table_body">
    <% @posts.each do |post| %>
      <tr  class="community-table-tr">
      	<!--<td class="community-table_img"><img src="assets/misc/book.png"></td>-->
      	<td class="community-table_avatar"><%= image_tag post.user.avatar %></td>
        <td class="community-table_title-txt"><%= post.title %></td>
        <td class="community-table_comment-txt"><%= post.comment %></td>
      	<td class="community-table_by-txt"><p>By: <%= post.user.name %></p></td>
      	<td class="community-table_date-txt"><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

